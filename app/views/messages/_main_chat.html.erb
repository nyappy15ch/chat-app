<div class="title_area">
  <div class="left_area">
    <div class="room_name">test_name</div>
  </div>
  <div class="right_area">
    <div class="close_chat">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="message_area">
  <div class="message">
    <div class="upper_message">
      <div class="m_user">
      test_user1
      </div>
      <div class="m_time">
      2020/08/26(wed) 20:45:00
      </div>
    </div>
    <div class="lower_message">
      <div class="m_content">
      test_message1
      </div>
    </div>
  </div>

  <div class="message">
    <div class="upper_message">
      <div class="m_user">test_user2</div>
      <div class="m_time">2020/08/26(wed) 20:45:00</div>
    </div>
    <div class="lower_message">
      <div class="m_content">test_message2</div>
    </div>
  </div>
</div>
<%= form_with model: [@room, @message], html: {class: "input_area"}, local: true do |f|%>
    <div class="form-input">
      <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
    <%= f.submit '送信', class: 'form-submit' %>
<% end %>
